{
    "[python]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "files.exclude": {
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
        "**/*.pytest_cache": true,
        "**/.mypy_cache": true,
    },
    "python.formatting.provider": "none"
}